<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/gmf_act_bg">

    <ScrollView
        android:id="@+id/section_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/group_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/group_info"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@mipmap/ic_arrow_right_dark"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/label_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="小超人精选3号"
                            android:textColor="@color/gmf_text_black"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/label_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/label_name"
                            android:layout_marginLeft="4dp"
                            android:layout_toRightOf="@id/label_name"
                            android:gravity="center"
                            android:paddingBottom="2dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:text="沪深"
                            android:textColor="@color/gmf_text_red"
                            android:textSize="12sp"/>


                        <TextView
                            android:id="@+id/label_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/label_name"
                            android:layout_marginTop="4dp"
                            android:text="2015.07.28 创建 已运行16天 剩余164天"
                            android:textColor="@color/gmf_text_grey"
                            android:textSize="16sp"/>

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/line1"
                    style="@style/SepLineHorizontal"
                    android:layout_below="@id/group_header"
                    android:layout_marginLeft="16dp"/>

                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:text="总资产￥"
                        android:textSize="12sp"
                        app:layout_widthPercent="33.3%"/>

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/text1"
                        android:layout_toRightOf="@id/text1"
                        android:text="证券市值￥"
                        android:textSize="12sp"
                        app:layout_widthPercent="33.3%"/>

                    <TextView
                        android:id="@+id/text3"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/text1"
                        android:layout_toRightOf="@id/text2"
                        android:text="现金结余￥"
                        android:textSize="12sp"
                        app:layout_widthPercent="33.3%"/>

                    <TextView
                        android:id="@+id/label_total_capital"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/text1"
                        android:layout_alignRight="@id/text1"
                        android:layout_below="@id/text1"
                        android:layout_marginTop="2dp"
                        android:text="20,150,000.00"
                        android:textColor="@color/gmf_text_black"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/label_market_value"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/label_total_capital"
                        android:layout_alignLeft="@id/text2"
                        android:layout_alignRight="@id/text2"
                        android:layout_marginTop="4dp"
                        android:text="18,150,000.00"
                        android:textColor="@color/gmf_text_black"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/label_surplus_capital"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/label_market_value"
                        android:layout_alignLeft="@id/text3"
                        android:layout_alignRight="@id/text3"
                        android:layout_marginTop="4dp"
                        android:text="2,000,000.00"
                        android:textColor="@color/gmf_text_black"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/text1"
                        android:layout_alignRight="@id/text1"
                        android:layout_below="@id/label_total_capital"
                        android:layout_marginTop="16dp"
                        android:text="日收益"
                        android:textColor="@color/gmf_text_grey"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/text4"
                        android:layout_alignLeft="@id/text2"
                        android:layout_alignRight="@id/text2"
                        android:text="月收益"
                        android:textColor="@color/gmf_text_grey"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/text4"
                        android:layout_alignLeft="@id/text3"
                        android:layout_alignRight="@id/text3"
                        android:text="总收益"
                        android:textColor="@color/gmf_text_grey"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/label_day_income_percent"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/text4"
                        android:layout_alignRight="@id/text4"
                        android:layout_below="@id/text4"
                        android:layout_marginTop="2dp"
                        android:text="+0.02%"
                        android:textColor="@color/gmf_text_red"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/label_month_income_percent"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/text5"
                        android:layout_alignRight="@id/text5"
                        android:layout_below="@id/text5"
                        android:layout_marginTop="2dp"
                        android:text="+0.02%"
                        android:textColor="@color/gmf_text_red"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/label_total_income_percent"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/text6"
                        android:layout_alignRight="@id/text6"
                        android:layout_below="@id/text6"
                        android:layout_marginTop="2dp"
                        android:text="+1.12%"
                        android:textColor="@color/gmf_text_red"
                        android:textSize="12sp"/>

                </android.support.percent.PercentRelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/section_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/gmf_list_cell_height"
                    android:background="#d8d8d8">

                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="16dp"
                        android:text="名称/代码"
                        android:textColor="@color/gmf_text_grey"
                        android:textSize="12sp"
                        app:layout_widthPercent="25%"/>

                    <TextView
                        android:id="@+id/text5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/text4"
                        android:text="持有/成本"
                        android:textColor="@color/gmf_text_grey"
                        android:textSize="12sp"
                        app:layout_widthPercent="25%"/>

                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/text5"
                        android:text="市值/现价"
                        android:textColor="@color/gmf_text_grey"
                        android:textSize="12sp"
                        app:layout_widthPercent="25%"/>

                    <TextView
                        android:id="@+id/text7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/text6"
                        android:gravity="right"
                        android:paddingRight="16dp"
                        android:text="盈亏/比例"
                        android:textColor="@color/gmf_text_grey"
                        android:textSize="12sp"
                        app:layout_widthPercent="25%"/>
                </android.support.percent.PercentRelativeLayout>

                <LinearLayout
                    android:id="@+id/container_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

            </LinearLayout>

            <com.goldmf.GMFund.widget.BasicCell
                android:id="@+id/cell_today_deal_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:hideIcon="true"
                app:lineBottom="true"
                app:lineBottomHasMarginLeft="true"
                app:lineTop="true"
                app:title="今日订单"/>

            <com.goldmf.GMFund.widget.BasicCell
                android:id="@+id/cell_history_deal_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hideIcon="true"
                app:lineBottom="true"
                app:title="订单历史"/>

            <View
                android:layout_width="0px"
                android:layout_height="80dp"/>
        </LinearLayout>
    </ScrollView>

    <com.goldmf.GMFund.widget.EmbedProgressView
        android:id="@+id/section_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <include layout="@layout/layer_reload"/>

</FrameLayout>