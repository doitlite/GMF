<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gmf_act_bg"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar style="@style/CustomizeToolbar">

        <TextView
            style="@style/CustomizeToolbarTitle"
            android:text="实名认证" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/gmf_white"
        android:orientation="vertical">

        <View style="@style/BorderLineHorizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="姓名"
                android:textColor="@color/gmf_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/label_name"
                style="@style/GMFEditText"
                android:gravity="center_vertical"
                android:text="黄城市"
                android:textColor="@color/gmf_text_grey" />
        </LinearLayout>

        <View
            style="@style/SepLineHorizontal"
            android:layout_marginLeft="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="身份证"
                android:textColor="@color/gmf_text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/label_id"
                style="@style/GMFEditText"
                android:gravity="center_vertical"
                android:text="4404*****19"
                android:textColor="@color/gmf_text_grey" />
        </LinearLayout>

        <View style="@style/BorderLineHorizontal" />
    </LinearLayout>
</LinearLayout>