<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gmf_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:src="@drawable/ic_close_dark" />

        <TextView
            android:id="@+id/label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="委托买入确认"
            android:textColor="@color/gmf_text_black"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label_stock_name_and_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="24dp"
            android:text="002466 罗牛山"
            android:textColor="@color/gmf_text_black"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="80dp"
            android:text="委托方式"
            android:textColor="#80000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/label_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="80dp"
            android:text="限价委托"
            android:textColor="#222222"
            android:textSize="16sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="120dp"
            android:text="委托价格"
            android:textColor="#80000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/label_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="120dp"
            android:text="17.01"
            android:textColor="#E74C3C"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="160dp"
            android:text="委托数量"
            android:textColor="#80000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/label_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="160dp"
            android:text="9,000 股"
            android:textColor="#E74C3C"
            android:textSize="16sp" />

        <com.goldmf.GMFund.widget.ProgressButton
            android:id="@+id/btn_confirm"
            android:layout_width="@dimen/gmf_button_width_large"
            android:layout_height="@dimen/gmf_button_height_large"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="220dp"
            android:textSize="@dimen/gmf_button_text_size_large"
            app:buttonTheme="blue"
            app:text_for_loading="正在风控检测"
            app:text_for_normal="确认买入" />

        <TextView
            android:id="@+id/label_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            tools:text="出问题啦！！！！！"
            android:textColor="@color/gmf_text_red"
            android:textSize="12sp" />

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_below="@id/btn_confirm" />


    </RelativeLayout>
</LinearLayout>