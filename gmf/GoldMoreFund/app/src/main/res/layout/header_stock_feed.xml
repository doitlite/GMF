<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/header_stock_feed"
             xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="36dp"
             android:background="@color/gmf_act_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="牛人动态"/>

    <RelativeLayout
        android:id="@+id/area_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_marginRight="10dp"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/label_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"/>

        <ImageView
            android:id="@+id/img_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/label_range"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/label_range"
            android:src="@drawable/ic_menu_drop"/>

    </RelativeLayout>

    <View
        style="@style/SepLineHorizontal"
        android:layout_gravity="bottom"/>

</FrameLayout>