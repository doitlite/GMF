<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:background="@color/gmf_status_bar_black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_top_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="总资产\n539,931.70"
            android:textColor="#80FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/label_top_medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="可用资金\n539,931.70"
            android:textColor="#80FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/label_top_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="参考市值\n539,931.70"
            android:textColor="#80FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/label_bottom_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="当前仓位\n53.34%"
            android:textColor="#80FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/label_bottom_medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="总盈亏\n-3350.00"
            android:textColor="#80FFFFFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/label_bottom_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="总收益\n-3.35%"
            android:textColor="#80FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>
