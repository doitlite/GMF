<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/gmf_list_cell_height"
                android:background="@color/gmf_white">

    <TextView
        android:id="@+id/label_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:text="10"
        android:textColor="@color/gmf_text_black"/>

    <TextView
        android:id="@+id/label_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="180dp"
        android:layout_toLeftOf="@id/label_amount"
        android:singleLine="true"
        android:text="完成绑卡"
        android:textColor="@color/gmf_text_black"/>

    <TextView
        android:id="@+id/label_name"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="110dp"
        android:singleLine="true"
        android:text="邹洁"
        android:textColor="@color/gmf_text_black"/>


    <TextView
        android:id="@+id/label_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:text="2015.09.28"
        android:textColor="@color/gmf_text_black"
        android:textSize="14sp"/>

    <View
        style="@style/BorderLineHorizontal"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>