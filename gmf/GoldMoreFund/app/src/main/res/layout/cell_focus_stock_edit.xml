<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@color/gmf_white"
    tools:layout_marginTop="25dp">

    <ImageView
        android:id="@+id/cb_delete"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:src="@mipmap/bg_checkbox_checked" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/label_stock_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="112dp"
        android:textColor="@color/gmf_text_black"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="2749.79" />

    <TextView
        android:id="@+id/label_stock_name_and_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/label_stock_price"
        android:layout_marginLeft="72dp"
        android:lineSpacingExtra="2dp"
        android:textColor="@color/gmf_text_black"
        android:textSize="16sp"
        tools:text="天康生物\n002100" />


    <ImageView
        android:id="@+id/img_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/label_stock_name_and_code"
        android:layout_marginLeft="54dp"
        android:src="@mipmap/indicator_hold_stock2" />

    <ImageView
        android:layout_width="26dp"
        android:layout_height="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@mipmap/ic_drag" />

</RelativeLayout>