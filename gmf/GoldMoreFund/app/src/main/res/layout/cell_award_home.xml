<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gmf_white">

    <TextView
        android:id="@+id/label_title_and_expired_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:lineSpacingExtra="2dp"
        android:text="邀请注册奖励卡\n有效期至2016.06.30"
        android:textColor="@color/gmf_text_black"
        android:textSize="14sp"/>

    <Button
        android:id="@+id/btn_action"
        style="@style/GMFRoundButton.Red"
        android:layout_width="96dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:text="邀请好友"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/label_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_action"
        android:layout_margin="16dp"
        android:text="每成功推荐一名新用户完成绑卡，推荐人和被邀请人各获10元奖励。注册奖励最多可获得100元奖励。"
        android:textSize="14sp"/>
</RelativeLayout>