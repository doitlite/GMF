<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="@dimen/gmf_list_cell_height_big"
                android:background="@drawable/sel_cell_bg_default">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        app:placeholderImage="@mipmap/ic_bank_placeholder"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@id/img_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建设银行"
            android:textColor="@color/gmf_text_black"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/label_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单笔50000/单日100W"
            android:textColor="@color/gmf_text_grey"
            android:textSize="12sp"/>

    </LinearLayout>

    <View
        style="@style/BorderLineHorizontal"
        android:layout_marginLeft="16dp"/>

</RelativeLayout>