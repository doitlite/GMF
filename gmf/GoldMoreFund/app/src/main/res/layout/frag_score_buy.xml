<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar style="@style/CustomizeToolbar">

        <TextView
            style="@style/CustomizeToolbarTitle"
            android:text="购买积分"/>

    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/field_amount"
        style="@style/GMFEditText.Round"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:hint="请输入想要购买的金额"/>

    <Button
        android:id="@+id/btn_buy"
        style="@style/GMFRoundButton.Yellow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gmf_button_height_large"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:text="购买"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/label_brief"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:text="1元=10000积分\n仅支持账户余额购买，当前余额 9945.32元"
        android:textColor="@color/gmf_text_grey"
        android:textSize="12sp"/>

</LinearLayout>