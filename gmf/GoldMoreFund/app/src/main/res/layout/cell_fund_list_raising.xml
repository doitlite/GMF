<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/gmf_white"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/section_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/gmf_text_black"
            android:textSize="14sp"
            tools:text="无线滚雪球A股精选"/>

        <TextView
            android:id="@+id/label_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/label_name"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/label_name"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:text="沪深"
            android:textColor="@color/gmf_text_red"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/label_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_name"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/gmf_text_grey"
            android:textSize="12dp"
            tools:text="2015.07.12 结束"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right_dark"/>

    </RelativeLayout>

    <View
        android:id="@+id/line1"
        style="@style/SepLineHorizontal"
        android:layout_marginLeft="16dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/label_day_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="投资期剩余3天"
            android:textColor="@color/gmf_text_grey"
            android:textSize="12sp"/>


        <View
            android:id="@+id/line1"
            style="@style/SepLineVertical"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@android:id/text1"/>

        <ProgressBar
            android:id="@+id/progress"
            style="@style/HorizontalProgressBar.Yellow"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@android:id/text1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:progress="50"
            android:layout_toLeftOf="@id/line1"/>

        <TextView
            android:id="@+id/label_total_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/label_day_remaining"
            android:layout_marginLeft="16dp"
            android:text="已募集 222,150元"
            android:textColor="@color/gmf_text_black"
            android:textSize="14sp"/>
    </RelativeLayout>


</LinearLayout>