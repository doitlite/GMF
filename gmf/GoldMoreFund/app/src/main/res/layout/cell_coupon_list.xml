<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gmf_white"
    android:minHeight="120dp"
    tools:layout_marginLeft="10dp"
    tools:layout_marginRight="10dp"
    tools:layout_marginTop="25dp">

    <TextView
        android:id="@+id/label_amount"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="32sp"
        tools:text="88.88元"
        tools:textColor="@color/gmf_text_black" />

    <View
        android:id="@+id/line_sep"
        android:layout_width="8dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/label_amount" />

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/line_sep"
        android:orientation="vertical"
        android:padding="14dp">

        <TextView
            android:id="@+id/label_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="全场通用红包"
            android:textStyle="bold"
            android:textColor="@color/gmf_text_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/label_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="任意组合单词投资满1,000元可用"
            android:textColor="@color/gmf_text_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/label_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="2015.6.1 至 2015.12.05"
            android:textColor="@color/gmf_text_grey"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>