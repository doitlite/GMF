<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginTop="10dp">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:placeholderImage="@mipmap/bg_fund_normal_cover"
        app:placeholderImageScaleType="centerCrop"
        app:roundedCornerRadius="8dp"
        app:viewAspectRatio="2.11"/>

    <TextView
        android:id="@+id/label_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="收益分成\n80%"
        android:textColor="@color/gmf_text_white"
        android:textSize="10sp"/>

    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="36dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="28dp"
        android:background="#4DFFFFFF"/>

    <TextView
        android:id="@+id/label_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="114dp"
        android:layout_marginTop="24dp"
        android:text="止损比例\n80%"
        android:textColor="@color/gmf_text_white"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/label_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="112dp"
        android:background="#33FFFFFF"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="组合期限 3个月"
        android:textColor="#80FFFFFF"
        android:textSize="10sp"/>


</FrameLayout>