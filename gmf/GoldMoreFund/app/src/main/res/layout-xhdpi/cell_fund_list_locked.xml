<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/gmf_white"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/section_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/gmf_text_black"
            android:textSize="14sp"
            tools:text="无线滚雪球A股精选"/>

        <TextView
            android:id="@+id/label_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/label_name"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/label_name"
            android:gravity="center"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="2dp"
            android:text="沪深"
            android:textColor="@color/gmf_text_red"
            android:textSize="12sp"/>


        <TextView
            android:id="@+id/label_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_name"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/gmf_text_grey"
            android:textSize="12dp"
            tools:text="2015.07.12 结束"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_arrow_right_dark"/>

    </RelativeLayout>

    <View
        android:id="@+id/line1"
        style="@style/SepLineHorizontal"
        android:layout_marginLeft="16dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/label_total_capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="总资产\n1,031,536.89"
            android:textColor="@color/gmf_text_grey"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/label_income_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="160dp"
            android:text="今日盈亏\n+8.76%"
            android:textColor="@color/gmf_text_grey"
            android:textSize="12sp"/>


        <View
            android:id="@+id/line1"
            style="@style/SepLineVertical"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120dp"/>

    </RelativeLayout>


</LinearLayout>