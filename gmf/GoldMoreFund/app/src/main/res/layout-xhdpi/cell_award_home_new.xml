<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:layout_marginTop="10dp"
              android:background="@color/gmf_white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <Button
            android:id="@+id/btn_action"
            style="@style/GMFRoundButton.Red"
            android:layout_width="96dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="邀请好友"
            android:textSize="@dimen/gmf_button_text_size_small"/>

        <TextView
            android:id="@+id/label_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="邀请注册奖励卡"
            android:textColor="#000000"
            android:textSize="16sp"/>


        <View
            style="@style/BorderLineHorizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_centerVertical="true"
            app:actualImageScaleType="fitCenter"
            app:placeholderImage="@mipmap/ic_award_placeholder"
            app:placeholderImageScaleType="fitCenter"/>

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="24dp"
            android:src="@mipmap/ic_arrow_right_dark"/>

        <TextView
            android:id="@+id/label_content"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/img_arrow"
            android:layout_toRightOf="@id/img_icon"
            android:lineSpacingExtra="4dp"
            android:text="随机奖金，最高千元\n好友领奖，双方获益"
            android:textColor="@color/gmf_text_black"
            android:textSize="12sp"/>

    </RelativeLayout>

</LinearLayout>